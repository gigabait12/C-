#include <iostream>
#include <string>

using namespace std;

class CombatUnit {
private:
    int health;
    int damage;
    string unitType;

    static int totalHealth; 
    static int totalDamage; 

public:
    CombatUnit(int h, int d, const string& type) : health(h), damage(d), unitType(type) {
        totalHealth += health;
        totalDamage += damage;
    }

    ~CombatUnit() {
        totalHealth -= health;
        totalDamage -= damage;
    }

    static int getTotalHealth() {
        return totalHealth;
    }

    static int getTotalDamage() {
        return totalDamage;
    }

    int getHealth() const {
        return health;
    }

    int getDamage() const {
        return damage;
    }

    string getUnitType() const {
        return unitType;
    }

    void setHealth(int h) {
        totalHealth -= health; 
        health = h;
        totalHealth += health; 
    }

    void setDamage(int d) {
        totalDamage -= damage; 
        damage = d;
        totalDamage += damage;
    }
};

int CombatUnit::totalHealth = 0;
int CombatUnit::totalDamage = 0;

int main() {
    CombatUnit unit1(100, 20, "Солдат");
    CombatUnit unit2(150, 30, "Танк");

    cout << "Общее здоровье армии: " << CombatUnit::getTotalHealth() << endl;
    cout << "Общая мощь армии: " << CombatUnit::getTotalDamage() << endl;

    unit1.setHealth(120);
    unit2.setDamage(40);

    cout << "После изменений:" << endl;
    cout << "Общее здоровье армии: " << CombatUnit::getTotalHealth() << endl;
    cout << "Общая мощь армии: " << CombatUnit::getTotalDamage() << endl;

}
