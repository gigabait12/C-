1.
#include <iostream>
#include <locale>

int main() {
    setlocale(LC_ALL, "Russian");

    double a, b, c;

    std::cout << "Введите три действительных числа: ";
    std::cin >> a >> b >> c;

    if (a >= 0) {
        a = a * a;
    }
    if (b >= 0) {
        b = b * b;
    }
    if (c >= 0) {
        c = c * c;
    }

    std::cout << "Результаты: " << a << ", " << b << ", " << c << std::endl;

    return 0;
}
2.
#include <iostream>
#include <vector>
#include <unordered_map>
#include <locale>

int main() {
    setlocale(LC_ALL, "Russian");

    int n;
    std::cout << "Введите количество целых чисел: ";
    std::cin >> n;

    std::vector<int> numbers(n);
    std::cout << "Введите " << n << " целых чисел: ";
    for (int i = 0; i < n; ++i) {
        std::cin >> numbers[i];
    }

    std::unordered_map<int, int> frequency;

    for (int num : numbers) {
        frequency[num]++;
    }

    int uniqueDuplicates = 0;
    for (const auto& pair : frequency) {
        if (pair.second > 1) {
            uniqueDuplicates++;
        }
    }

    std::cout << "Количество чисел, которые встречаются более одного раза: " << uniqueDuplicates << std::endl;

    return 0;
}
3.
#include <iostream>
#include <vector>
#include <locale>

int main() {
    setlocale(LC_ALL, "Russian");

    int n;
    std::cout << "Введите размер матрицы n: ";
    std::cin >> n;

    std::vector<std::vector<int>> matrix(n, std::vector<int>(n));

    std::cout << "Введите элементы матрицы:" << std::endl;
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            std::cin >> matrix[i][j];
        }
    }

    std::cout << "Номера строк, все элементы которых - нули:" << std::endl;
    for (int i = 0; i < n; ++i) {
        bool allZeros = true;
        for (int j = 0; j < n; ++j) {
            if (matrix[i][j] != 0) {
                allZeros = false;
                break;
            }
        }
        if (allZeros) {
            std::cout << i + 1 << " ";
        }
    }

    std::cout << std::endl;
    return 0;
}
