#include <iostream>
#include <cstdlib> 
#include <ctime>  
#include <algorithm> 
#include <clocale> 

using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");

    int n;

    cout << "Введите размер динамического массива: ";
    cin >> n;

    int* array = new int[n];

    srand(static_cast<unsigned int>(time(0)));

    for (int i = 0; i < n; ++i) {
        array[i] = rand() % 100;
    }

    sort(array, array + n);

    cout << "Отсортированный массив: ";
    for (int i = 0; i < n; ++i) {
        cout << array[i] << " ";
    }
    cout << endl;

    delete[] array;

    return 0;
}
